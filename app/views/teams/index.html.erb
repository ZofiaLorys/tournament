
<% if @teams_group_a.empty?  %>
  <%= render partial: 'form', locals: { group_name: "A"} %>
<% end %>

<% if @teams_group_b.empty?  %>
  <%= render partial: 'form', locals: { group_name: "B"} %>
<% end %>
<% if @teams_group_a.present? && @teams_group_b.present?  %>
  <%= link_to "Tournament matches", matches_path %>
<% end %>

<% for team_group in [@teams_group_a, @teams_group_b] do %>
<table>
  <tr>
    <th>Team name</td>
    <th>Group name</td>
  </tr>
  <% team_group.each do |team| %>
    <tr>
      <td> <%= team.name %></td>
        <td> <%= team.group_name  %> </td>
    </tr>
  <% end %>
</table>
<br>
<% end %>

