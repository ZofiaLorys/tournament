  <%case @current_phase %>
    <%when "matches_for_group_A"%>
      <%= render partial: 'form', locals: { group_name: "A", url: "/matches", button_text: "Create tournament pairs for a group A", phase: "groups"} %>
    <%when "matches_for_group_B"%>
      <%= render partial: 'form', locals: { group_name: "B", url: "/matches", button_text: "Create tournament pairs for a group B", phase: "groups"} %>
      <%= render partial: 'table_groups_phase', locals: { matches_group: @matches_group_a} %>
    <%when "scores_generating_for_group_A"%>
      <%= render partial: 'form', locals: { group_name: "A", url: "/matches/update", button_text: "Generate scores for a group A", phase: "groups"} %>
      <%= render partial: 'table_groups_phase', locals: { matches_group: @matches_group_a} %>
      <%= render partial: 'table_groups_phase', locals: { matches_group: @matches_group_b} %>
    <%when "scores_generating_for_group_B"%>
      <%= render partial: 'form', locals: { group_name: "B", url: "/matches/update", button_text: "Generate scores for a group B", phase: "groups"} %>
      <%= render partial: 'table_groups_phase', locals: { matches_group: @matches_group_a} %>
      <%= render partial: 'table_groups_phase', locals: { matches_group: @matches_group_b} %>
    <%when "matches_for_playoff"%>
     <%= render partial: 'form', locals: { url: "/matches", button_text: "Pairs for playoff", phase: "playoff", rounds_left_playoff: 3} %>
      <%= render partial: 'table_groups_phase', locals: { matches_group: @matches_group_a} %>
      <%= render partial: 'table_groups_phase', locals: { matches_group: @matches_group_b} %>
    <%when "scores_for_playoff"%>
      <%= render partial: 'form', locals: { url: "/matches/update", button_text: "Generate scores for playoff", phase: "playoff", rounds_left_playoff: 3} %>
      <%= render partial: 'table_groups_phase', locals: { matches_group: @matches_group_a} %>
      <%= render partial: 'table_groups_phase', locals: { matches_group: @matches_group_b} %>
      <%= render partial: 'table_playoff_phase', locals: { matches_group: @matches_playoff_first_round} %>

    <%when "matches_for_playoff_semifinal"%>
      <%= render partial: 'form', locals: { url: "/matches", button_text: "Pairs for playoff semifinal", phase: "playoff", rounds_left_playoff: 2} %>
      <%= render partial: 'table_groups_phase', locals: { matches_group: @matches_group_a} %>
      <%= render partial: 'table_groups_phase', locals: { matches_group: @matches_group_b} %>
      <%= render partial: 'table_playoff_phase', locals: { matches_group: @matches_playoff_first_round} %>
    <%when "scores_for_playoff_semifinal"%>
      <%= render partial: 'form', locals: { url: "/matches/update", button_text: "Generate scores for playoff semifinal", phase: "playoff", rounds_left_playoff: 2} %>
      <%= render partial: 'table_groups_phase', locals: { matches_group: @matches_group_a} %>
      <%= render partial: 'table_groups_phase', locals: { matches_group: @matches_group_b} %>
      <%= render partial: 'table_playoff_phase', locals: { matches_group: @matches_playoff_first_round} %>
      <%= render partial: 'table_playoff_phase', locals: { matches_group: @matches_playoff_semifinal} %>
    <%when "pairs_for_playoff_final"%>
      <%= render partial: 'form', locals: { url: "/matches", button_text: "Pairs for playoff final", phase: "playoff", rounds_left_playoff: 1} %>
      <%= render partial: 'table_groups_phase', locals: { matches_group: @matches_group_a} %>
      <%= render partial: 'table_groups_phase', locals: { matches_group: @matches_group_b} %>
      <%= render partial: 'table_playoff_phase', locals: { matches_group: @matches_playoff_first_round} %>
      <%= render partial: 'table_playoff_phase', locals: { matches_group: @matches_playoff_semifinal} %>
    <%when "scores_for_playoff_final"%>
      <%= render partial: 'form', locals: { url: "/matches/update", button_text: "Generate scores for playoff final", phase: "playoff", rounds_left_playoff: 1} %>
      <%= render partial: 'table_groups_phase', locals: { matches_group: @matches_group_a} %>
      <%= render partial: 'table_groups_phase', locals: { matches_group: @matches_group_b} %>
      <%= render partial: 'table_playoff_phase', locals: { matches_group: @matches_playoff_first_round} %>
      <%= render partial: 'table_playoff_phase', locals: { matches_group: @matches_playoff_semifinal} %>
      <%= render partial: 'table_playoff_phase', locals: { matches_group: @matches_playoff_final} %>
    <%when "tournament_complete_results"%>
      <%= render partial: 'table_groups_phase', locals: { matches_group: @matches_group_a} %>
      <%= render partial: 'table_groups_phase', locals: { matches_group: @matches_group_b} %>
      <%= render partial: 'table_playoff_phase', locals: { matches_group: @matches_playoff_first_round} %>
      <%= render partial: 'table_playoff_phase', locals: { matches_group: @matches_playoff_semifinal} %>
      <%= render partial: 'table_playoff_phase', locals: { matches_group: @matches_playoff_final} %>
  <%end%>




  

